<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General Settings">
        <SwitchPreference
            android:key="reconnect_mode"
            android:title="Connection mode"
            android:summary="Reconnects to egg every frame when on"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="show_fps"
            android:title="Display camera debug information"
            android:summary="Show debug information for each camera"
            android:defaultValue="true" />

        <SwitchPreference
            android:key="record_all"
            android:title="Record all"
            android:summary="Record all 3 cameras when pressing a record button"
            android:defaultValue="false" />
        <ListPreference
            android:key="quality"
            android:title="Default camera quality on the dashboard screen"
            android:summary="Select how often to check for updates"
            android:entries="@array/quality_options"
            android:entryValues="@array/quality_options"
            android:defaultValue="Low" />
            
        <Preference
            android:key="restart_app"
            android:title="Restart app" />

        <Preference
            android:key="shut_down_app"
            android:title="Exit to Android" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Info">

        <Preference
            android:key="egg_ip"
            android:title="Egg ip"
            android:summary="Loading..." />
        <Preference
            android:key="recording_folder"
            android:title="Recordings location"
            android:summary="Loading..." />

    </PreferenceCategory>
</PreferenceScreen>