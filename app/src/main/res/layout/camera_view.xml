<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_view_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/box_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/record_button_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.hamal.egg.MjpegView
                android:id="@+id/cam_1"
                android:layout_width="@dimen/default_cam_width"
                android:layout_height="@dimen/default_cam_height" />

        </FrameLayout>

        <Button
            android:id="@+id/record_button_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/record_button_background"
            android:text="rec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frame_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/zoom_button_1" />

        <Button
            android:id="@+id/zoom_button_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/zoom_button_background"
            android:text="zoom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frame_1"
            app:layout_constraintTop_toBottomOf="@+id/record_button_1"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/black"

        app:layout_constraintTop_toBottomOf="@+id/box_1"
        app:layout_constraintBottom_toTopOf="@+id/box_3">


        <FrameLayout
            android:id="@+id/frame_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/record_button_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.hamal.egg.MjpegView
                android:id="@+id/cam_2"
                android:layout_width="@dimen/default_cam_width"
                android:layout_height="@dimen/default_cam_height" />
        </FrameLayout>

        <Button
            android:id="@+id/record_button_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/record_button_background"
            android:text="rec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frame_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/box_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <FrameLayout
            android:id="@+id/frame_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/record_button_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.hamal.egg.MjpegView
                android:id="@+id/cam_3"
                android:layout_width="@dimen/default_cam_width"
                android:layout_height="@dimen/default_cam_height" />
        </FrameLayout>

        <Button
            android:id="@+id/record_button_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/record_button_background"
            android:text="rec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frame_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>